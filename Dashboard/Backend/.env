# Environment Configuration for Dashboard Backend
# Copy this file to .env and update the values as needed

# Server Configuration
PORT=5000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache Configuration (optional - defaults are set in code)
# All cache TTL settings are now set to 2 minutes for faster data refresh
# CACHE_TTL_SHORT=120000      # 2 minutes in milliseconds
# CACHE_TTL_MEDIUM=120000     # 2 minutes in milliseconds
# CACHE_TTL_LONG=120000       # 2 minutes in milliseconds
# CACHE_TTL_EXTENDED=120000   # 2 minutes in milliseconds

# Development/Production Mode
NODE_ENV=development
